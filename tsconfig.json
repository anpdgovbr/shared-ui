{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["node", "vite/client"],
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./types",
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "src/*": ["./src/*"],
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@ui/*": ["./src/components/ui/*"],
      "@stories/*": ["./src/stories/*"],
      "@theme/*": ["./src/theme/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@govbr-types/*": ["./src/types/*"]
    }
  },
  "include": ["src", ".storybook", "*.config.*", "vite-env.d.ts"],
  "exclude": ["**/*.test.ts", "dist", "types", "coverage", "node_modules"]
}
