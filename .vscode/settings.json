{
  // ğŸ“¦ PATH ALIASES â†’ Usar @ui/*, @components/* em vez de caminhos relativos
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "javascript.preferences.importModuleSpecifier": "non-relative",

  // âœ¨ SUGESTÃ•ES INTELIGENTES (auto imports e completions com contexto)
  "typescript.suggest.autoImports": true,
  "typescript.preferences.includeInstantAutoImports": true,
  "typescript.suggest.includeCompletionsForModuleExports": true,
  "typescript.suggest.includeCompletionsWithInsertText": true,

  // ğŸ’… FORMATADOR PADRÃƒO (Prettier para .ts e .tsx)
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ğŸ§¹ AÃ‡Ã•ES AUTOMÃTICAS AO SALVAR
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.organizeImports": true
  },

  // ğŸ“š SUGESTÃ•ES E SNIPPETS
  "editor.quickSuggestions": {
    "strings": true,
    "comments": false,
    "other": true
  },
  "editor.snippetSuggestions": "top",
  "editor.suggestOnTriggerCharacters": true,
  "editor.wordBasedSuggestions": "matchingDocuments",

  // ğŸ§  SPELL CHECK CUSTOMIZADO (Requer extensÃ£o Code Spell Checker)
  "cSpell.words": ["officedocument", "openxmlformats", "sead", "spreadsheetml"],

  // ğŸ§¼ IGNORAR PASTAS NÃƒO RELEVANTES
  "files.exclude": {
    "**/dist": true,
    "**/types": true,
    "**/node_modules": true
  },

  // ğŸ¯ Usar Prettier do projeto (garante consistÃªncia)
  "prettier.prettierPath": "./node_modules/prettier"
}
